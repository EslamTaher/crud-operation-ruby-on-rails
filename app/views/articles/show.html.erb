
<table class="table table-hover ml-4" style="text-align:center;width:30%">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Text</th>
    </tr>
  </thead>
  <tbody>
      
        <tr>
            <td>
                <%= @article.title %>
            </td>
            <td>
                <%= @article.text %>
            </td>
        </tr>
      
    </tbody>
</table>
<%= link_to 'Edit', edit_article_path(@article) , class: "btn btn-success ml-5"%> 

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>










<%= link_to 'Back', articles_path , class: "btn btn-dark ml-3" %>

